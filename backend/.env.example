# Application Settings
APP_NAME=Amazon Delivery Dashboard API
APP_VERSION=1.0.0
DEBUG=False

# BigQuery Settings
# Your Google Cloud Platform project ID
GCP_PROJECT_ID=your-gcp-project-id

# BigQuery dataset name containing the tables
BIGQUERY_DATASET=your-bigquery-dataset

# Name of the conversation table in BigQuery
CONVERSATION_TABLE=conversation

# Name of the review table in BigQuery
REVIEW_TABLE=review

# Project ID to filter data (numeric)
PROJECT_ID_FILTER=your-project-id

# Google Cloud Credentials
# Path to your service account JSON file for BigQuery access
# Download from: GCP Console > IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=./path-to-your-service-account.json

# API Settings
# URL prefix for all API endpoints
API_PREFIX=/api

# CORS Settings
# Comma-separated list of allowed origins for CORS
# Add your frontend URLs here
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Pagination
# Default number of items per page
DEFAULT_PAGE_SIZE=100

# Maximum number of items per page
MAX_PAGE_SIZE=1000

# PostgreSQL Settings
# PostgreSQL database host (use 'localhost' for local development)
POSTGRES_HOST=localhost

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# PostgreSQL username
POSTGRES_USER=your-postgres-username

# PostgreSQL password
POSTGRES_PASSWORD=your-postgres-password

# PostgreSQL database name
POSTGRES_DB=RubricDeepResearch

# Data Sync Settings
# How often to sync data from BigQuery (in hours)
SYNC_INTERVAL_HOURS=1

# Whether to run initial sync on application startup
INITIAL_SYNC_ON_STARTUP=True

# S3 Settings
# S3 bucket name where work items are stored
S3_BUCKET=your-s3-bucket-name

# S3 prefix (folder path) within the bucket
# Example: "project-name/outputData/"
S3_PREFIX=your-s3-folder-path/

# AWS CLI profile name to use for S3 access
# This should match a profile configured in ~/.aws/credentials
# Run 'aws configure --profile your-profile-name' to set up
S3_AWS_PROFILE=your-aws-profile-name

# Project Settings
# Project start date for week number calculation (Format: YYYY-MM-DD)
PROJECT_START_DATE=2025-01-01
